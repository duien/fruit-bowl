.item.bookmark
  .banner
    .clipper
      .title
        %h2= bookmark.title
    .clipper
      .metadata
        .meta
          %span.date= format_date(bookmark.published_at)
          %span.dot &#9679;
          %a{ :href => bookmark.href } view
          %span.dot &#9679;
          %a{ :href => "http://delicious.com/url/#{bookmark.url_hash}" } on delicious
        .tags
          - bookmark.tags.each do |tag|
            %span.tag= tag
  .clipper
    .body= bookmark.body
