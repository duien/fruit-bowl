.item.photo
  .banner
    .clipper
      .title
        %h2= photo.title.blank? ? 'Untitled' : photo.title
    .clipper
      .metadata
        .meta
          %span.date= format_date(photo.published_at)
          %span.dot &#9679;
          %a{ :href => photo.page_url } on flickr
        .tags
          - unless photo.tags.empty?
            %strong tagged
          - photo.tags.each do |tag|
            %span.dot &#9679;
            %span.tag= tag
  .clipper
    .body
      .content
        %img{ :src => photo.source_url }
        = photo.body
